<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="wrap_content"
    android:layout_width="match_parent">
    <RelativeLayout
        android:id="@+id/bgDelete"
        android:background="@color/deleteBg"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >
        <TextView
            android:layout_toStartOf="@id/iconDelete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/xoa"
            android:layout_centerVertical="true"
            android:textSize="20sp"
            android:textColor="@android:color/white" />
        <ImageView
            android:id="@+id/iconDelete"
            android:tint="@android:color/white"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_delete"
            android:layout_marginStart="@dimen/app_margin"
            android:layout_marginEnd="@dimen/app_margin"
            />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/itemBg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/money_item_bg"
        android:clickable="true"
        android:focusable="true">
        <ImageView
            android:id="@+id/iconCategory"
            android:layout_marginStart="@dimen/app_margin"
            android:layout_marginEnd="@dimen/app_margin"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_alignParentStart="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_calendar" />
        <TextView
            android:id="@+id/categoryName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/iconCategory"
            android:layout_toStartOf="@id/moneyText"
            android:textStyle="bold"
            android:textSize="16sp"
            android:layout_centerVertical="true"
            android:ellipsize="end"
            android:maxLines="1"
            />
        <TextView
            android:id="@+id/moneyText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/app_margin"
            android:layout_marginEnd="@dimen/app_margin"
            android:textStyle="bold"
            android:textSize="16sp"
            android:layout_centerVertical="true"
            android:layout_toStartOf="@id/iconArrow" />
        <ImageView
            android:id="@+id/iconArrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_chevron_right_black_24dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="@dimen/app_margin" />
    </RelativeLayout>
</FrameLayout>